#!/usr/bin/env bash
# script that installs nginx and posts hello world at its root

if [ ! -e /usr/sbin/nginx ];
then
	apt-get -y update
	apt-get -y upgrade
	apt-get -y install nginx
fi

if [ ! -e '/var/www/html' ];
then
	mkdir -p /var/www/html
fi

echo 'Hello World!' > /var/www/html/index.html

service nginx restart
